<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginBottom="10dp"
    android:layout_height="wrap_content">


    <ImageView
        android:background="#00ffff"
        android:id="@+id/item_view_contats_img"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/item_view_contats_txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="Douglas"

        android:textSize="20sp"
        android:textStyle="bold"

        app:layout_constraintBottom_toBottomOf="@id/item_view_contats_img"
        app:layout_constraintStart_toEndOf="@id/item_view_contats_img"
        app:layout_constraintTop_toTopOf="@id/item_view_contats_img" />


    <TextView
        app:layout_constraintTop_toTopOf="@id/item_view_contats_img"
        app:layout_constraintBottom_toBottomOf="@id/item_view_contats_img"
        app:layout_constraintStart_toStartOf="@id/item_view_contats_img"
        app:layout_constraintEnd_toEndOf="@id/item_view_contats_img"
        android:id="@+id/item_view_contats_txtLetter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="D"

        android:textSize="25sp"
        android:textStyle="bold"
        />

</androidx.constraintlayout.widget.ConstraintLayout>